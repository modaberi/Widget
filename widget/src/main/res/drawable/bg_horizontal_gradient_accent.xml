<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
<item android:state_pressed="true">
    <shape xmlns:android="http://schemas.android.com/apk/res/android" android:shape="rectangle">
        <solid android:color="@color/colorAccentLight"/>
        <corners android:radius="@dimen/corner_radius"/>
        <stroke android:color="@color/colorAccentLight" android:width="1dp"/>
    </shape>
</item>

<item>
    <shape xmlns:android="http://schemas.android.com/apk/res/android"
           android:shape="rectangle">
        <gradient
                android:endColor="@color/colorAccentLight"
                android:centerColor="@color/colorAccentDark"
                android:startColor="@color/colorAccentDark"
                android:angle="180"/>
        <stroke
                android:width="0dip"
                android:color="@android:color/transparent" />
        <!--<corners android:radius="@dimen/corner_radius" />-->
        <padding
                android:bottom="0dip"
                android:left="0dip"
                android:right="0dip"
                android:top="0dip" />

        <corners android:radius="@dimen/corner_radius"/>
    </shape>
</item>
</selector>

